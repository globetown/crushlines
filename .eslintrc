{
  "parser": "babel-eslint",
  "plugins": ["react"],
  "env": {
    "node": true
  },
  "rules": {
    "quotes": ["error", "double"],
    "no-extra-semi": "error",
    "no-unreachable": "error",
    "array-bracket-spacing": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "semi": ["error", "always"],
    "indent": ["error", 2, {
      "SwitchCase": 1
    }],
    "space-before-function-paren": "error",
    "no-spaced-func": "error",
    "space-unary-ops": [
      "error", {
        "words": true,
        "nonwords": false
      }
    ],
    "comma-spacing": ["error", {
      "before": false,
      "after": true
    }],
    "keyword-spacing": ["error", {
      "before": true,
      "after": true
    }],
    "space-infix-ops": "error",
    "semi-spacing": ["error", {
      "before": false,
      "after": true
    }],
    "key-spacing": ["error", {
      "beforeColon": false,
      "afterColon": true
    }]
  }
}
